<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="com.egecius.demo_styles.MainActivity">

        <!-- TextView -->

        <!-- on Android 7.1 default TextView & AppCompatTextView size is 14 sp -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView default" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView 12dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView 14dp"
            android:textSize="14dp" />


        <!-- AppCompatTextView -->

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppCompatTextView default" />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppCompatTextView 12dp"
            android:textSize="12dp" />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppCompatTextView 14dp"
            android:textSize="14dp" />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppCompatTextView 20dp"
            android:textSize="20dp" />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppCompatTextView 24dp"
            android:textSize="24dp" />


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppCompatTextView 48dp"
            android:textSize="48dp" />


        <!-- Button -->

        <!-- on Android 7.1 default button for both Button & AppCompatButton size is 14 sp -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button default" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button 14dp"
            android:textSize="14dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button 16dp"
            android:textSize="16dp" />

        <!-- AppCompatButton -->


        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppCompatButton default" />


        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppCompatButton 14dp"
            android:textSize="14dp" />


        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AppCompatButton 16dp"
            android:textSize="16dp" />


    </LinearLayout>

</ScrollView>